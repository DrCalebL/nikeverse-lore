{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nikeverse Dimension",
  "description": "Schema for dimension/region data in the Nikeverse",
  "type": "object",
  "required": ["id", "name", "theme"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (kebab-case)"
    },
    "name": {
      "type": "string",
      "description": "Display name"
    },
    "theme": {
      "type": "string",
      "description": "Cultural/aesthetic theme"
    },
    "levelRange": {
      "type": "object",
      "properties": {
        "min": { "type": "integer" },
        "max": { "type": "integer" }
      }
    },
    "playOrder": {
      "type": "integer",
      "description": "Order in campaign progression"
    },
    "description": {
      "type": "string"
    },
    "atmosphere": {
      "type": "object",
      "properties": {
        "visual": { "type": "string" },
        "mood": { "type": "string" },
        "danger": { "type": "string" }
      }
    },
    "charles": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "wisdom": { "type": "string" },
        "backstory": { "type": "string" }
      }
    },
    "legendaryNike": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "corruptionReason": { "type": "string" },
        "abilities": { "type": "array", "items": { "type": "string" } },
        "freedBy": { "type": "string" }
      }
    },
    "harbinger": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" },
        "emotionalTheme": { "type": "string" },
        "corruptionReason": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "locations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "factions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "alignment": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "sideQuests": {
      "type": "array",
      "items": { "type": "string" }
    },
    "dimensionalAnchor": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "obtainedFrom": { "type": "string" }
      }
    },
    "ogForeshadowing": {
      "type": "object",
      "properties": {
        "mention": { "type": "string" },
        "quote": { "type": "string" }
      }
    }
  }
}
